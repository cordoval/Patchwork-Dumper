#var_dump pre
{
    white-space: pre;
}

li.dump
{
    list-style-type: disc;
    border: none;
}

.dump>pre
{
    margin: 15px 0;
    padding-left: 11px;
    width: 100%;
    overflow: hidden;
}

.dump ol>li
{
    padding: 0;
}

.event br /* Hide Chrome inserted BR */
{
    display: none;
}

.event
{
    color: gray;
    margin: 0;
    padding: 0;
    font-style: italic;
    font-family: inherit;
}

.array-compact
{
    white-space: nowrap; /* This rule makes IE slow as hell */
}

.arrow,
.const,
.class,
.alias,
.handle,
.string
{
    color: black;
    font-style: normal;
    font-family: sans-serif;
}

.dump a
{
    display: inline-block;
    position: relative;
    right: 15px;
    width: 0;
    font-style: normal;
    font-family: sans-serif;
    color: lightblue;
    cursor: pointer;
    text-decoration: none;
}

.dump>a
{
    right: 0;
}

.const,
.dump a:hover
{
    color: blue;
    text-decoration: none;
}

.string
{
    color: purple;
}

.empty.string
{
    width: 3px;
    height: 1em;
    display: inline-block;
}

.key, .key *
{
    color: gray;
    font-style: italic;
}

.public
{
    color: green;
}

.protected
{
    color: orange;
}

.private
{
    color: red;
}

.arrow
{
    color: gray;
    background-color: white;
}

.event.silenced>.array-compact span
{
    color: silver;
    background-color: white;
}

.array-compact a,
.array-compact .key
{
    display: none;
}

.key.string
{
    display: inline;
}

.array-compact>ol
{
    display: none;
}

.undefined {
    color: gray;
    font-style: italic;
}

.dump-blackbox {
    background-color: black;
    margin: 20px 0;
    color: white;
    padding: 10px;
    border-radius: 5px;
    word-wrap: break-word;
}

.dump-blackbox * {
    font-family: Arial;
}

.dump-blackbox li{
    padding-bottom: 0;
}

.colon {
    color: white;
}

.truncated {
    font-style: italic;
    color: #CCC;
}

.reference-marker {
    color: gray;
    padding: 0 2px;
    margin-right: 1px;
}

.hovered {
    cursor: help;
}

.hovered .reference-marker {
    color: yellow;
    background-color: #333;
    border-radius: 2px;
}

a[data-helper]:hover:after, span.string[data-helper]:hover:after {
  content: attr(data-helper);
  position: absolute;
  background-color: white;
  color: #333;
  padding: 5px;
  border-radius: 3px;
  margin-left: 10px;
}
